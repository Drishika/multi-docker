
{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "abhinavprakash/multi-client",
            "hostname": "client",
            "essential": false 
                  
        },
        {
            "name": "server",
            "image": "abhinavprakash/multi-server",
            "hostname": "api",
            "essential": false 
        },
        {
            "name": "worker",
            "image": "abhinavprakash/multi-worker",
            "hostname": "worker",
            "essential": false 
        },
        {
            "name": "nginx",
            "image": "abhinavprakash/multi-nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostport": 80,
                    "containerPort": 80
                }
            ], 
            "links": ["client", "server"]
        }
    ]
}